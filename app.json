{
  "expo": {
    "owner": "mel_2025s",
    "name": "rutas_gastronomicas",
    "slug": "rutas_gastronomicas",
    "scheme": "rutasgastronomicas",  
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splashRG.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Necesitamos tu ubicaci√≥n para mostrarte platos cercanos y trazar rutas en el mapa."
}
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff",
        "permissions": ["ACCESS_COARSE_LOCATION", "ACCESS_FINE_LOCATION"],
        "package": "com.rutasgastronomicas.app",
        "userInterfaceStyle": "automatic"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-location"
    ]
  }
}
